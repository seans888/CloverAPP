<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgotpass"
    android:background="#F48FB1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloverapppos.android.ForgotPassword">

    <ImageView
        android:id="@+id/forgotpass_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cloverlogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        />

    <TextView
        android:id="@+id/forgotpass_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/forgotpass_logo"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textColor="#6A1B9A"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/forgotpass_email"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/forgotpass_title"
        android:layout_marginTop="34dp"
        android:background="#F06292"
        android:hint="Enter Email"
        android:inputType="textEmailAddress|textWebEmailAddress"
        android:maxLines="1"
        android:textColor="#FAFAFA"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="234dp">

    </EditText>

    <Button
        android:id="@+id/forgotpass_btn_changepassword"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C2185B"
        android:text="Reset Password"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="345dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/forgotpass_email"
        android:layout_alignParentStart="true">

    </Button>

    <TextView
        android:id="@+id/forgotpass_btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="#6A1B9A"
        android:gravity="center"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/forgotpass_btn_changepassword"
        android:layout_alignParentStart="true">
    </TextView>



</RelativeLayout>
