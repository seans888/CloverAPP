<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="#F48FB1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloverapppos.android.Login">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cloverlogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        />

    <TextView
        android:id="@+id/login_appTitle"
        android:gravity="center"
        android:textColor="#6A1B9A"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="CloverAppPoS"
        android:layout_below="@+id/login_logo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_appTitle"
        android:layout_marginTop="39dp"
        android:background="#F06292"
        android:hint="Email"
        android:inputType="textEmailAddress|textWebEmailAddress"
        android:maxLines="1"
        android:textColor="#FAFAFA"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="234dp">

    </EditText>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_below="@+id/login_email"
        android:layout_marginTop="20dp"
        android:background="#F06292"
        android:hint="Password"
        android:inputType="textPassword|textWebPassword"
        android:maxLines="1"
        android:textColor="#FAFAFA"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="284dp"></EditText>

    <Button
        android:id="@+id/login_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C2185B"
        android:text="Login"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="345dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/login_password"
        android:layout_alignParentStart="true">

    </Button>

    <TextView
        android:id="@+id/login_btn_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:clickable="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#6A1B9A"
        android:layout_below="@+id/login_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp">
    </TextView>

    <TextView
        android:id="@+id/login_btn_forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORGOT PASSWORD?"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="#6A1B9A"
        android:gravity="center"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </TextView>


</RelativeLayout>
